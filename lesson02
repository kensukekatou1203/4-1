<?php
// 変数に値を代入し、
$x = 40;
// その値が50より大きければ
// 「50より大きい」
 if ($x > 50) {
   print('50より大きい');
 }
// 50より小さければ
// 「50より小さい」
 if ($x < 50) {
     print('50より小さい');
 }
// 50と同値であれば
// 「50です」
 if ($x == 50) {
     print('50です');
 }
// という文字列を出力してください。

// また最低限どういう値でテストすればいいか
// 確認したテスト値をコメントアウトですべて示してください。
?>
